<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    <script type="text/javascript">
        window.onload = QueryOrder;
        var baseApplicationPath = '@Url.Content("~/")';
        function QueryOrder() {
            var TotalPrice = 0;
            $.ajax({
                type: "GET",
                url: baseApplicationPath + 'Products/GetProductOfOpenCart',
                datatype: "json",
                success: function (data) {
                    //alert(JSON.stringify(data));
                    console.log(data);
                    TotalPrice = data.totalPrice;
                    document.getElementById("price").innerText = TotalPrice;
                },
                error: function (request, error) {
                    alert(JSON.stringify(request));
                    alert(JSON.stringify(error));
                    return;
                }

            });

        }


        function AddToCard(id) {
            //TODO:
            //Must handle cookie information
            data = {
                productId: id,
            }

            $.ajax({
                data: data,
                type: "GET",
                url: baseApplicationPath + 'Products/AddProductToCart',
                datatype: "json",
                success: function (data) {
                    console.log(data)
                    QueryOrder();
                },
                error: function (request, error) {
                    alert(JSON.stringify(request));
                    alert(JSON.stringify(error));
                }

            });
        }

    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/icons/simcardIcon.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
                EcommerceWebSite
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown05" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown05">
                            <a class="dropdown-item" asp-action="CategoryFilter" asp-controller="Products" asp-route-CategoryId="1"> Smart Home</a>
                            <a class="dropdown-item" asp-action="CategoryFilter" asp-controller="Products" asp-route-CategoryId="2">Sport </a>
                            <a class="dropdown-item" asp-action="CategoryFilter" asp-controller="Products" asp-route-CategoryId="3"> Office</a>
                            <a class="dropdown-item" asp-action="CategoryFilter" asp-controller="Products" asp-route-CategoryId="4"> Digital</a>
                        </div>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="ShowOrders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cart">
                            <span class="material-icons">
                                shopping_basket
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Cart" class="nav-link text-light">
                            <span class="nav-item" id="price"></span>
                        </a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ECommerceWebSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
